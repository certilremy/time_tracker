<%= form_for @transaction do |f| %>
<%= f.label :name, "Time to track name" %>
<%= f.text_field :name %> <br>
<%= f.label :amoun, "Amount of time spent" %>
<%= f.number_field :amoun %> <br>
<%= f.label :group_id, "Assing it to a group" %>
<%= f.collection_select :group_id, @groups, :id, :name %> <br>
<%= f.submit "Add time"%>
<% end %>

<%= render  "shared/side_bar" %>